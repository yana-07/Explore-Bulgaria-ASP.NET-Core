<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExploreBulgaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExploreBulgaria.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.0.5/dist/css/adminlte.min.css">
    <script src="https://kit.fontawesome.com/307eb2164d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" asp-append-version="true" />
    @await RenderSectionAsync("Links", required: false)
</head>
<body>
    <div class="wrapper">
        <partial name="_UserMessages" />
        <header>
            <div class="main-header">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-secondary border-bottom box-shadow">
                    <div class="container-fluid">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                            </li>
                        </ul>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link text-white">Здравей, @((User?.FirstName() + " " + @User?.LastName()) ?? @User?.Identity?.Name) (Администратор)</a>
                                </li>
                                @if (User?.AvatarUrl() != null)
                                {
                                    <li class="nav-item">
                                        <img src="@User.AvatarUrl()" class="rounded-circle img-fluid" style="width: 40px;" alt="Avatar" />
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Изход</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
                <span class="brand-text font-weight-light">Explore Bulgaria</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-house-user"></i>
                                <p>Начало</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Notifications" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-regular fa-envelope"></i>
                                <p>Нотификации</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Attractions" asp-action="All" class="nav-link">
                                <i class="nav-icon fa-solid fa-question"></i>
                                <p>Предложени обекти</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Categories" asp-action="Add" class="nav-link">
                                <i class="nav-icon fa-solid fa-plus"></i>
                                <p>Добави категория</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Subcategories" asp-action="Add" class="nav-link">
                                <i class="nav-icon fa-solid fa-plus"></i>
                                <p>Добави подкатегория</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Regions" asp-action="Add" class="nav-link">
                                <i class="nav-icon fa-solid fa-plus"></i>
                                <p>Добави регион / град</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Administration" asp-controller="Villages" asp-action="Add" class="nav-link">
                                <i class="nav-icon fa-solid fa-plus"></i>
                                <p>Добави село</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>             
        <div class="content-wrapper">           
            <main role="main" class="pb-3">               
                @RenderBody()   
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.UtcNow.Year - ExploreBulgaria
            </div>
        </footer>
   </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.0.5/dist/js/adminlte.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>
    <script src="~/js/sidebars.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />"
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
