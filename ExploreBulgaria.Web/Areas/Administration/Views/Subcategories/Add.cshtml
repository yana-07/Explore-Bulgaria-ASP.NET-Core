@model AddSubcategoryViewModel

@{
    ViewData["Title"] = "Добави подкатегория";
}

<form asp-area="Administration" asp-controller="Subcategories" asp-action="Add"
      method="post" class="col-md-6 offset-md-3">
    <div class="form-group">
        <label asp-for="Name">Заглавие:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Категория:</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Добави</button>
</form>