@model IEnumerable<string>

@{
    ViewData["Title"] = "Нотификации";
}

<div id="chatButtons" class="row">
    @foreach (var chat in Model)
    {
        <a asp-area="Administration" asp-controller="Notifications"
           asp-action="Chat" asp-route-group="@chat" 
           asp-route-fromVisitorId="@chat.Split('@')[1]"     
           class="btn btn-secondary mt-3 col-md-9 offset-md-1">
            Чат с потребител @(chat.Split('@')[1])
        </a>
    }
</div>