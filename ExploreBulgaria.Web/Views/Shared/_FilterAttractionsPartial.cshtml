@model AttractionFilterModel

<div class="search-form">
    <div class="container p-0">
        <div class="row">
            <div class="col-lg-12">
                <form id="search-form" name="gs" method="get" asp-controller="Attractions" asp-action="All">
                    <div class="row">
                        <div class="col-lg-2">
                            <h4>Филтрирай обектите по:</h4>
                        </div>
                        <div class="col-lg-4 offset-lg-1">
                            <fieldset>
                                <label asp-for="CategoryName">1. Избери категория</label>
                                <select asp-for="CategoryName" class="form-select" aria-label="Default select example" id="chooseCategory">
                                    <option></option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                <label asp-for="SubcategoryName">2. Избери подкатегория</label>
                                <select asp-for="SubcategoryName" class="form-select" aria-label="Default select example" id="chooseSubcategory">
                                    <option></option>
                                    @foreach (var subcategory in Model.Subcategories)
                                    {
                                        <option value="@subcategory.Name">@subcategory.Name</option>
                                    }
                                </select>
                            </fieldset>
                        </div>                      
                    </div>
                    <div class="row mt-5">
                        <div class="col-lg-2">
                            <fieldset>
                                <button id="filterBtn" class="border-button text-center">Търси</button>
                            </fieldset>
                        </div>
                        <div class="col-lg-4 offset-lg-1">
                            <fieldset>
                                <label asp-for="RegionName">3. Избери регион</label>
                                <select asp-for="RegionName" class="form-select" aria-label="Default select example" id="chooseRegion">
                                    <option></option>
                                    @foreach (var region in Model.Regions)
                                    {
                                        <option value="@region.Name">@region.Name</option>
                                    }
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                <label asp-for="VillageName">4. Избери село</label>
                                <select asp-for="VillageName" class="form-select" aria-label="Default select example" id="chooseVillage">
                                    <option></option>
                                    @foreach (var location in Model.Villages)
                                    {
                                        <option value="@location.Name">@location.Name</option>
                                    }
                                </select>
                            </fieldset>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <fieldset>
                            <input asp-for="SearchTerm" placeholder="Търсене" class="col-sm-4 offset-sm-4 form-control-sm" />
                        </fieldset>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

