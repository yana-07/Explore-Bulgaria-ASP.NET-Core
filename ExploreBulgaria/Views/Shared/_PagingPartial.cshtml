@model AttractionsListViewModel
<div class="col-lg-12">
    <ul class="page-numbers">
        <li class="@(Model.HasPreviousPage == false ? "disabled" : string.Empty)">
            <a asp-action="All" asp-route-page="@Model.PreviousPageNumber" 
                 asp-route-categoryName="@Model.FilterModel.CategoryName"
                 asp-route-subcategoryName="@Model.FilterModel.SubcategoryName"
                 asp-route-regionName="@Model.FilterModel.RegionName"
                 asp-route-searchTerm="@Model.FilterModel.SearchTerm">
                <i class="fa fa-arrow-left"></i>
            </a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li>
                    <a asp-action="All" asp-route-page="@i"
                        asp-route-categoryName="@Model.FilterModel.CategoryName"
                        asp-route-subcategoryName="@Model.FilterModel.SubcategoryName"
                        asp-route-regionName="@Model.FilterModel.RegionName"
                        asp-route-searchTerm="@Model.FilterModel.SearchTerm">
                        @i
                    </a>
                </li>
            }
        }
        <li class="active"><a href="#">@Model.PageNumber</a></li>
        @for (int i = Model.PageNumber + 1; i < Model.PageNumber + 4; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li>
                    <a asp-action="All" asp-route-page="@i" 
                        asp-route-categoryName="@Model.FilterModel.CategoryName"
                        asp-route-subcategoryName="@Model.FilterModel.SubcategoryName"
                        asp-route-regionName="@Model.FilterModel.RegionName"
                        asp-route-searchTerm="@Model.FilterModel.SearchTerm">
                        @i
                    </a>
                </li>
            }
        }
        <li class="@(Model.HasNextPage == false ? "disabled" : string.Empty)">
            <a asp-action="All" asp-route-page="@Model.NextPageNumber" 
                 asp-route-categoryName="@Model.FilterModel.CategoryName" 
                 asp-route-subcategoryName="@Model.FilterModel.SubcategoryName" 
                 asp-route-regionName="@Model.FilterModel.RegionName"
                 asp-route-searchTerm="@Model.FilterModel.SearchTerm">
                <i class="fa fa-arrow-right"></i>
            </a>
        </li>
    </ul>
</div>