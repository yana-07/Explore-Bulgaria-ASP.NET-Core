@using ExploreBulgaria.Web.ViewModels.Users
@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="registration-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form id="registration-form" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>@ViewData["Title"]</h4>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.FirstName">Име</label>
                                <input class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.FirstName" />
                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.LastName">Фамилия</label>
                                <input class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.LastName" />
                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.UserName">Потребителско име</label>
                                <input id="username" class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                                <span id="usernameErr" asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.Email">Имейл</label>
                                <input id="email" class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Email" />
                                <span id="emailErr" asp-validation-for="@Model.Email" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.Password">Парола</label>
                                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label class="form-label" asp-for="@Model.ConfirmPassword">Повтори парола</label>
                                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <fieldset>
                                <button class="main-button">Регистрирация</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/register-ajax.js"></script>
}
